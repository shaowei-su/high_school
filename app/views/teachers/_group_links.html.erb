<div class="sidebar span3">
	<img src="http://www.regis.org/images/Admissions/Nav_Pic_49.jpg" />
	<div class="well">
		
		<ul class="nav nav-list">

			<% if params[:department].nil? %>
			
				<li class="nav-header">Teachers</li>
				<li class=<%= 'active' if params[:action] == 'index'%>><%= link_to "All Teachers", teachers_path%></li>
				<li class=<%= 'active' if params[:action] == 'departments'%>><%= link_to "By Departments", '/teachers_depts'%></li>

			<% else %>
				
				<li class="nav-header">Departments</li>
				<% Teacher::DEPARTMENTS.each do |dept|%>
					<% dept4url = format4url(dept) %>
					<li class=<%= 'active' if params[:department] == dept4url%>><%= link_to dept, department_path(dept4url)%></li>
				<% end %>
			<% end %>
		</ul>

	</div>
</div>

